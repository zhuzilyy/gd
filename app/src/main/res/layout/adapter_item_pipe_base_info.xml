<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_40"
            android:layout_marginLeft="@dimen/d_10"
            android:gravity="center_vertical"
            android:text="作业区" />

        <TextView
            android:textColor="#000"
            android:id="@+id/tv_departmentName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_40"
            android:layout_marginLeft="@dimen/d_10"
            android:layout_marginRight="@dimen/d_10"
            android:gravity="right|center_vertical"
            android:text="通州二区"
            />

    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_0_5"
        android:layout_marginLeft="@dimen/d_5"
        android:layout_marginRight="@dimen/d_5"
        android:background="@color/color_divider" />
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_40"
            android:layout_marginLeft="@dimen/d_10"
            android:gravity="center_vertical"
            android:text="线路" />

        <TextView
            android:textColor="#000"
            android:text="京山一线"
            android:id="@+id/tv_pipeName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_40"
            android:layout_marginLeft="@dimen/d_10"
            android:layout_marginRight="@dimen/d_10"
            android:gravity="right|center_vertical" />

    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_0_5"
        android:layout_marginLeft="@dimen/d_5"
        android:layout_marginRight="@dimen/d_5"
        android:background="@color/color_divider" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_40"
            android:layout_marginLeft="@dimen/d_10"
            android:gravity="center_vertical"
            android:text="桩号" />

        <TextView
            android:textColor="#000"
            android:text="未知"
            android:id="@+id/tv_stationNo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_40"
            android:layout_marginLeft="@dimen/d_10"
            android:layout_marginRight="@dimen/d_10"
            android:gravity="right|center_vertical" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_0_5"
        android:layout_marginLeft="@dimen/d_5"
        android:layout_marginRight="@dimen/d_5"
        android:background="@color/color_divider" />
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:padding="@dimen/d_10"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/d_60"
            android:layout_height="@dimen/d_30"
            android:background="@drawable/bg_standing"
            android:text="删除"
            android:textColor="#fff"
            />
        <Button
            android:id="@+id/btn_update"
            android:layout_width="@dimen/d_60"
            android:layout_height="@dimen/d_30"
            android:layout_marginLeft="@dimen/d_10"
            android:layout_marginRight="@dimen/d_10"
            android:background="@drawable/bg_standing"
            android:text="维护"
            android:textColor="#fff"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_10"
        android:background="#ececec" />
</LinearLayout>