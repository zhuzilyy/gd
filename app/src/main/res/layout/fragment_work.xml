<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="@dimen/d_20"
        android:layout_marginTop="@dimen/d_20"
        android:text="北分管道"
        android:textColor="@color/write"
        android:textSize="@dimen/s_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/write"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/d_5">

            <TextView
                android:layout_width="@dimen/d_15"
                android:layout_height="@dimen/d_30"
                android:background="@color/color_blue_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d_20"
                android:text="基础资料"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="@dimen/s_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_tzsj"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="信息台账"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_addOrReduce"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/station" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="新增桩体"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_waterInsurance"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/water" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="增加水保工程"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/ll_standard_file"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/file" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="标准化文件"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_ffgl"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/jcffgl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="防腐管理"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_jobs"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/jobs_updata" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="岗位维护"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_building"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/buliding" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="增加违章违建"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/d_12"
            android:layout_marginLeft="@dimen/d_12"
            android:background="#FFE5E5E5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="@dimen/d_15"
                android:layout_height="@dimen/d_30"
                android:background="@color/color_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d_20"
                android:text="工作记录"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="@dimen/s_20" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_job_xhgl"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/gzjlxhgl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="巡护管理"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_16" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_job_fxgl"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/gzjlfxgl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="工程管理"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_wzwj"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/d_15"
                    android:layout_marginLeft="@dimen/d_15"
                    android:layout_marginEnd="@dimen/d_15"
                    android:layout_marginRight="@dimen/d_15"
                    android:src="@mipmap/wzwj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="违章违建巡检记录"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_upload"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/d_15"
                    android:layout_marginLeft="@dimen/d_15"
                    android:layout_marginEnd="@dimen/d_15"
                    android:layout_marginRight="@dimen/d_15"
                    android:src="@mipmap/add_event" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="事件记录"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />
            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_job_ghg"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/gzjlghg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="高后果区管理"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_task"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ll_task_dispatch"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/task_dispatch" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="任务下发"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_job_ffgl"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/gzjlffgl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="防腐管理"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/d_12"
            android:layout_marginLeft="@dimen/d_12"
            android:background="#FFE5E5E5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="@dimen/d_15"
                android:layout_height="@dimen/d_30"
                android:background="@color/color_blue_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d_20"
                android:text="检查与考核"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="@dimen/s_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/ll_search_data"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/sjcx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="数据查询"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_search_task"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/rwfx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="任务查询"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_upload_record"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@mipmap/upload_record" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="事件记录查询"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/ll_kpi_add"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/add_record" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="考核录入"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_kpi_display"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"
                    android:layout_gravity="center"
                    android:src="@mipmap/display" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="考核公示"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>