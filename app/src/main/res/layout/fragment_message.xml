<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="@dimen/d_20"
        android:layout_marginTop="@dimen/d_20"
        android:text="消息"
        android:textColor="@color/write"
        android:textSize="@dimen/s_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/write"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/d_5">

            <TextView
                android:layout_width="@dimen/d_15"
                android:layout_height="@dimen/d_30"
                android:background="#1A254B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d_20"
                android:text="任务管理"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="@dimen/s_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_waiting"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_waiting_handle"
                    android:padding="@dimen/d_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_waitingHandle"
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/d_30"
                        android:layout_height="@dimen/d_30"
                        android:layout_gravity="center"
                        android:src="@mipmap/dbrw" />
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="待办任务"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_overTime"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_over_time"
                    android:padding="@dimen/d_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/d_30"
                        android:layout_height="@dimen/d_30"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/cqrw" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="未完成事件"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_noApprove"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/d_10"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_no_approve"
                    android:padding="@dimen/d_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/d_30"
                        android:layout_height="@dimen/d_30"
                        android:layout_gravity="center"
                        android:src="@mipmap/cqwp" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="超期未批"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/d_20"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_refuse"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_refuse"
                    android:padding="@dimen/d_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/d_30"
                        android:layout_height="@dimen/d_30"
                        android:layout_gravity="center"
                        android:src="@mipmap/refuse" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_10"
                    android:text="审核未通过"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_task_waiting_handle"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_task_waiting_handle"
                    android:padding="@dimen/d_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_task"
                        android:layout_width="@dimen/d_30"
                        android:layout_height="@dimen/d_30"
                        android:layout_gravity="center"
                        android:src="@mipmap/waiting_handle" />
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="接收任务待处理"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>



            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_station_approve"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_station_approve"
                    android:padding="@dimen/d_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/d_32"
                        android:layout_height="@dimen/d_32"
                        android:layout_gravity="center"
                        android:src="@mipmap/approve_station" />
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="@dimen/d_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="管道桩台账待审批"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/d_20"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="3"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_building_approve"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_building_approve"
                    android:padding="@dimen/d_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/d_32"
                        android:layout_height="@dimen/d_32"
                        android:layout_gravity="center"
                        android:src="@mipmap/building_approval" />
                </RelativeLayout>
                <TextView
                    android:gravity="center"
                    android:layout_marginTop="@dimen/d_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="违章违建待审批"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/s_15" />

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>